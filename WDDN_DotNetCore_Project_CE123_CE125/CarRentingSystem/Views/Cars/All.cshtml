@model AllCarsQueryModel

@{
    ViewBag.Title = "All Cars";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Cars"></label>
                <select asp-for="Brand" class="form-control">
                    <option value="Toyota">Toyota 640D</option>
                    <option value="Mercedes">Mercedes S-Class</option>
                    <option value="BMW">BMW 640D</option>
                    <option value="Ford">Ford Figo</option>
                    <option value="volkswagen">volkswagen Polo</option>
                    <option value="Suzuki">Suzuki Swift</option>
                </select>
            </div>
        </div>

    </div>
    <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="success">Book</a></form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalCars / AllCarsQueryModel.CarsPerPage);
}

<div class="row mb-5">
    
    
    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
                                     !Model.Cars.Any();
    }

    
</div>


<partial name="_CarsPartial" model="@Model.Cars" />
